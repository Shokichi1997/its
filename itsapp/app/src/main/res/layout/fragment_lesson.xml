<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LessonFragment"
   >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:clickable="true"
        android:focusable="true"/>

    <include
        layout="@layout/app_bar"
        android:id="@+id/lesson_toolbar">
    </include>

    <ExpandableListView
        android:layout_below="@+id/lesson_toolbar"
        android:id="@+id/expandLesson"
        android:listSelector="#845dcc"
        android:dividerHeight="1dp"
        android:divider="#d2d2d2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment"
        android:childDivider="#c7b2b2"
        android:cacheColorHint="#00000000"
        android:background="#fff"


        />

    <ProgressBar
        android:id="@+id/progressBarLesson"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>