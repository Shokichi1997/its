<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="false"
        />

    <ProgressBar
        android:id="@+id/progressBarContent"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       />

    <WebView
        android:id="@+id/wv_lesson_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    </WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navbottomLesson"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/green">

        <Button
            android:id="@+id/btnPrevLesson"
            android:drawableTop="@drawable/ic_navigate_before_black_24dp"
            android:layout_width="0dp"
            android:text="@string/prev_lesson"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/btnFeedbackLesson"
            android:drawableTop="@drawable/ic_feedback_black_24dp"
            android:layout_width="0dp"
            android:text="@string/feedback"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/btnNextLesson"
            android:drawableTop="@drawable/ic_navigate_next_black_24dp"
            android:layout_width="0dp"
            android:text="@string/next_lesson"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@color/green"
            />
    </LinearLayout>

</RelativeLayout>