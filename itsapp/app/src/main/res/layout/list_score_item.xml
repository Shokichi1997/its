<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp">

    <ImageView
        android:id="@+id/imgviewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblLesonNameScore"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_star_black_24dp" />

    <TextView
        android:id="@+id/lblLesonNameScore"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="11dp"
        android:textSize="18dp"
        android:text="LessonName" />

    <EditText
        android:id="@+id/edtScores"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblLesonNameScore"
        android:layout_below="@+id/imgviewScore"
        android:ems="10"
        android:hint="score"
        android:inputType="number"
        tools:ignore="UnknownId"
        android:background="@drawable/shapepassword"
        />

    <ImageButton
        android:id="@+id/imgSaveScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtScores"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_save_black_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"></ImageButton>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtScores"
        android:layout_alignStart="@+id/lblLesonNameScore"
        android:text="Score" />
</RelativeLayout>