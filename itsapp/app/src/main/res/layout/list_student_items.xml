<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="@dimen/margin_fragment">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgIconAvatar"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/lblUserName"
        style="@style/ChapterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imgIconAvatar"
        android:layout_marginStart="56dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Chuong 1" />



        <ImageButton
            android:id="@+id/imgShowPopup"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_more_vert_black_24dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgIconAvatar"
        android:layout_alignStart="@+id/lblUserName"
        android:layout_marginStart="10dp"
        android:text="TextView"
        tools:text="level 100" />

</RelativeLayout>